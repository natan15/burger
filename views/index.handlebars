<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">EAT DA BURGER!</h1>
  </div>
</div>
<div class="container my-5">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header text-center">
                    <h3>New Burgers</h3>
                </div>
                <div class="row">
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9">

                                <pre>{{this.id}}. {{this.burger_name}}</pre>
                            </div>
                            <div class="col-md-3">

                                <form action="/burgers/devour" method="POST" class="devour-form button-size">
                                    <input class="form-control" type="hidden" name="burger_id"
                                        id="hidden_id_{{this.id}}" value={{this.id}}>
                                    <button type="submit" id="submit_devour_{{this.id}}"
                                        class="btn btn-sm btn-outline-danger m-1 devour-btn float-right">Devour
                                        it!<i class="fas fa-utensils ml-2"></i>
                                    </button>
                                    </input>
                                </form>

                            </div>
                        </div>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Devoured Burgers</h3>
                </div>
                <div class="card-body">
                    <div class="col-xs-6 text-center" class="task">
                        {{#each burger_data}}
                        {{#if this.devoured}}
                        <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}">
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="col-xs-12 text-center enter_section">
                <form action="/burgers/create" method="POST">
                    <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                    <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
                    </input>
                </form>
                <p>Enter a burger to devour!</p>
            </div>
        </div>
    </div>
</div>